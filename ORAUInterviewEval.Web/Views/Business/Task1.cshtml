@model ORAUInterviewEval.Infrastructure.ViewModels.Task1ViewModel

@{
	ViewData["Title"] = "Task 1 - Add Email field";
}


<div class="container">


	<div class="row">
		<div class="col-lg-8 offset-lg-2 mb-5">
			<h1 class="border-bottom">@ViewData["Title"]</h1>
			<div class="card">
				<div class="card-body">
					<h2>Requirements</h2>
					<p>
						Please add an Email field and send it to the save logic in the Task Service.
					</p>
					<ul>
						<li>Add field labeled 'Primary Email' to form below</li>
						<li>Validate that it is a proper Email before saving</li>
						<li>Save value to TaskService.SaveEmail() function when email is valid</li>
					</ul>
				</div>
			</div>
		</div>
	</div>


	<div class="row">
		<div class="col-lg-8 offset-lg-2">
			<div class="card">
				<div class="card-body">
					<form asp-action="Task1" asp-controller="Business" method="post">
						<div class="form-group">
							<label asp-for="FirstName" class="form-label"></label>
							<input asp-for="FirstName" class="form-control" aria-required="true" />
							<span asp-validation-for="FirstName" class="text-danger"></span>
						</div>
                        <div class="form-group">
                            <label asp-for="LastName" class="form-label"></label>
                            <input asp-for="LastName" class="form-control" aria-required="true" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="form-label"></label>
							<input asp-for="Email" class="form-control" aria-required="true" />
							<span asp-validation-for="Email" class="text-danger"></span>
                        </div>
						<div class="row">
							<div class="col-md-5">
								<button type="submit" class="btn-primary btn btn btn-block my-2">Save</button>
							</div>							
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>



</div>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />

	<script type="text/javascript">
		
	</script>
}


